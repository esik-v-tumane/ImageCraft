# Основной стиль, на основе которого будем настраивать
BasedOnStyle: LLVM

# Использование пробелов вместо табов (ваше основное требование)
UseTab: Never
IndentWidth: 4

# Дополнительные рекомендованные настройки для читаемости
ColumnLimit: 120               # Ограничение длины строки
BreakBeforeBraces: Attach      # Стиль переноса фигурных скобок (присоединение)
AllowShortFunctionsOnASingleLine: None  # Не разрешать короткие функции в одну строку
PointerAlignment: Left         # Звёздочка у указателей прилегает к имени: int *ptr;
SortIncludes: true             # Автоматически сортировать #include
SpaceBeforeParens: ControlStatements  # Ставить пробел перед скобками в if/for/while
